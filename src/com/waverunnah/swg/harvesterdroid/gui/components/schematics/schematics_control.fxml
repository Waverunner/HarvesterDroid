<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root spacing="2.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <HBox spacing="10.0">
      <children>
         <AnchorPane HBox.hgrow="ALWAYS">
            <children>
                  <ComboBox fx:id="groupComboBox" disable="false" nodeOrientation="LEFT_TO_RIGHT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
         </AnchorPane>
         <AnchorPane>
            <children>
               <CheckBox fx:id="checkBoxDisableGroups" mnemonicParsing="false" text="Disable Groups" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
         </AnchorPane>
      </children>
   </HBox>
    <ListView fx:id="schematicsListView" disable="true" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="No schematics have been created" />
        </placeholder>
    </ListView>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="removeSchematicButton" disable="true" layoutX="243.0" layoutY="10.0" mnemonicParsing="false" onAction="#removeSelectedSchematic" text="Remove" />
            <Button fx:id="editSchematicButton" disable="true" layoutX="158.0" layoutY="10.0" mnemonicParsing="false" onAction="#editSelectedSchematic" text="Edit" />
            <Button layoutX="243.0" layoutY="10.0" mnemonicParsing="false" onAction="#displaySchematicDialog" text="Add" />
        </buttons>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </ButtonBar>
</fx:root>
